{
  "id": "viibes-rules-v4",
  "version": 4,
  "humor_baseline": true,
  "allow_positive_and_roast": true,
  "length": { "min_chars": 50, "max_chars": 100 },
  "punctuation": {
    "ban_em_dash": true,
    "replacement": { "—": "," },
    "allowed": [".", ",", "?", "!"],
    "max_marks_per_line": 3
  },
  "text_layout": {
    "text_area_max_pct": 25,
    "placements": [
      "open_space",
      "meme_text",
      "lower_banner",
      "side_bar",
      "badge_callout",
      "caption"
    ]
  },
  "tones": {
    "Humorous": { "rules": ["witty","wordplay","exaggeration","no_serious"] },
    "Savage": { "rules": ["blunt","cutting","roast_style","no_soft_language"] },
    "Sentimental": { "rules": ["warm","gentle","touching","no_sarcasm"] },
    "Nostalgic": { "rules": ["past_refs","reflective","no_modern_slang"] },
    "Romantic": { "rules": ["affectionate","playful_love","no_mean"] },
    "Inspirational": { "rules": ["uplifting","motivating","no_negativity_or_irony"] },
    "Playful": { "rules": ["cheeky","silly","mischievous","no_formal"] },
    "Serious": { "rules": ["dry","deadpan","formal_weight","no_jokes_except_dry_wit"] }
  },
  "ratings": {
    "G": {
      "desc": "Wholesome/Playful",
      "allow_profanity": false,
      "allow_censored_swears": false,
      "allow_adult_refs": false,
      "insult_strength": "none"
    },
    "PG": {
      "desc": "Sharper Sarcasm",
      "allow_profanity": false,
      "allow_censored_swears": true,
      "censored_forms": ["f***","sh*t","a**","b****"],
      "allow_adult_refs": false,
      "insult_strength": "light_to_medium"
    },
    "PG-13": {
      "desc": "Edgy, Ironic, Sharp",
      "allow_profanity": true,
      "profanity_whitelist": ["hell","damn"],
      "block_stronger_profanity": true,
      "allow_adult_refs": false,
      "insult_strength": "medium"
    },
    "R": {
      "desc": "Raw, Unfiltered",
      "allow_profanity": true,
      "require_profanity": true,
      "profanity_whitelist": [
        "fuck",
        "shit",
        "bastard",
        "ass",
        "bullshit",
        "goddamn"
      ],
      "allow_adult_refs": true,
      "insult_strength": "heavy",
      "notes": [
        "can_be_positive_hype_or_roast",
        "avoid_extreme_violence_or_illegal_themes"
      ]
    }
  },
  "spelling": {
    "require_exact_quotes": true,
    "avoid_fragile_words": ["of","on","than","you’ve"],
    "auto_substitutions": { "you’ve": "you have" }
  },
  "render_hints": {
    "force_typography": ["bold","high_contrast","sans_serif_block"],
    "placement_rules": {
      "meme_text": { "top_bottom": true },
      "open_space": { "use_negative_space": true }
    }
  }
}